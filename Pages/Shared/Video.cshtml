@model AzureMediaStreaming.ViewModels.VideoModel
<!DOCTYPE html>
<html>
<head>
    <link href="//amp.azure.net/libs/amp/2.3.4/skins/amp-default/azuremediaplayer.min.css" rel="stylesheet">
    <script src="//amp.azure.net/libs/amp/2.3.4/azuremediaplayer.min.js"></script>
    <title>@Model?.VideoName</title>
</head>
<body>
    <P>@Model?.VideoName</P>
<video id="azuremediaplayer" class="azuremediaplayer amp-default-skin amp-big-play-centered" tabindex="0"></video>

<script>
var myOptions = {
	"nativeControlsForTouch": false,
	controls: true,
	autoplay: true,
	width: "640",
	height: "400",
}
myPlayer = amp("azuremediaplayer", myOptions);
myPlayer.src([
        {
                "src": "@Model?.VideoUrl",
                "type": "application/vnd.ms-sstr+xml"
        }
]);
</script>
</body>
</html>